{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch"
    },
    {
      "matchDepTypes": ["indirect"],
      "enabled": true
    },
    {
      "matchPackageNames": ["github.com/shurcooL/githubv4"],
      "groupName": "GitHub API client"
    },
    {
      "matchPackageNames": ["golang.org/x/oauth2", "golang.org/x/time"],
      "groupName": "golang.org/x packages"
    }
  ],
  "prConcurrentLimit": 3,
  "prHourlyLimit": 2,
  "schedule": ["before 10am on monday"],
  "timezone": "Asia/Tokyo",
  "automerge": false,
  "automergeType": "pr",
  "labels": ["dependencies"],
  "commitMessagePrefix": "chore(deps):",
  "semanticCommits": "enabled",
  "separateMinorPatch": true,
  "rangeStrategy": "update-lockfile",
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 10am on the first day of the month"]
  },
  "go": {
    "enabled": true,
    "postUpdateOptions": ["gomodTidy"]
  }
}
